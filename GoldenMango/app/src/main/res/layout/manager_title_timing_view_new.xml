<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView android:id="@+id/timing_title_salesissue"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0781期截止时间："
                  android:textColor="@color/text_dark"/>

        <com.goldenmango.lottery.component.CountdownView
            android:id="@+id/timing_title_salestime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            app:isShowDay="false"
            app:isShowHour="true"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isTimeTextBold="true"
            app:suffixGravity="center"
            app:suffixTextColor="@android:color/holo_red_light"
            app:suffixTextSize="16sp"
            app:timeTextColor="@android:color/holo_red_light"
            app:timeTextSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_light"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/timing_title_lotteryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000期    "
            android:textColor="@color/text_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/last_issue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rank_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="冠"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="亚"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="季"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="四"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="五"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="六"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="七"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="八"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="九"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="十"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_size_tiny"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
